{
  "src_folders": ["source/test/functional/browser"],
  "output_folder": "./reports/test-e2e",

  "selenium": {
    "start_process": false
  },

  "test_settings": {
    "default": {
      "launch_url": "http://localhost:${NODE_PORT}",
      "selenium_host": "localhost",
      "selenium_port": 4444,
      "silent": true,
      "screenshots" : {
        "enabled" : true,
        "on_failure" : true,
        "on_error" : false,
        "path" : "./reports/test-e2e"
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },
    "circle": {
      "launch_url": "http://localhost:${NODE_PORT}",
      "selenium_host": "localhost",
      "selenium_port": 4444,
      "log_dir": "${LOG_DIR}",
      "report_dir": "${REPORT_DIR}",
      "silent": true,
      "screenshots" : {
        "enabled" : true,
        "on_failure" : true,
        "on_error" : false,
        "path" : "${REPORT_DIR}"
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },
    "travis": {
      "launch_url": "http://localhost:${NODE_PORT}",
      "selenium_host": "ondemand.saucelabs.com",
      "selenium_port": 80,
      "username": "${SAUCE_USERNAME}",
      "access_key": "${SAUCE_ACCESS_KEY}",
      "log_dir": "${LOG_DIR}",
      "report_dir": "${REPORT_DIR}",
      "silent": true,
      "screenshots" : {
        "enabled" : true,
        "on_failure" : true,
        "on_error" : false,
        "path" : "${REPORT_DIR}"
      },
      "desiredCapabilities": {
        "tunnelIdentifier": "${TUNNEL_IDENTIFIER}",
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },

    "chrome": {
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    }
  }
}
